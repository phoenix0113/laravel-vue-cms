{
  "name": "asgardcms/platform",
  "description": "The core platform hosting the AsgardCMS modules.",
  "keywords": [
    "framework",
    "laravel",
    "platform",
    "nwidart",
    "asgard",
    "asgardcms"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Nicolas Widart",
      "homepage": "http://www.nwidart.com/",
      "role": "Developer"
    }
  ],
  "type": "project",
  "require": {
    "laravel/framework": "dev-master#ba916851321b9233cb56a0fb1deb41043b7df5fb",
    "laravel/elixir": "~1.0",
    "illuminate/html": "~5.0",
    "pingpong/modules": "1.1.8",
    "laracasts/commander": "dev-master",
    "laracasts/flash": "~1.0",
    "laracasts/presenter": "0.2.*",
    "guzzlehttp/guzzle": "~5.0",
    "mcamara/laravel-localization": "dev-Laravel5Support",
    "dimsav/laravel-translatable": "~5.0@dev",
    "mpedrera/themify": "*",
    "intervention/image": "~2.0",
    "filp/whoops": "~1.0",
    "baum/baum": "~1.0",
    "cartalyst/sentry": "~2.1",
    "asgard/demo-theme": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://packages.cartalyst.com"
    },
    {
      "type": "vcs",
      "url": "https://github.com/nWidart/laravel-localization"
    }
  ],
  "autoload": {
    "classmap": [
      "database",
      "tests/TestCase.php"
    ],
    "psr-4": {
      "App\\": "app/",
      "Modules\\": "Modules/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev"
}
