{
  "name": "nwidart/platform",
  "description": "The Emulsion core platform",
  "keywords": [
    "framework",
    "laravel",
    "platform",
    "emulsion"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Nicolas Widart",
      "homepage": "http://www.nwidart.com/",
      "role": "Developer"
    }
  ],
  "type": "project",
  "require": {
    "laravel/framework": "~5.0",
    "laravel/elixir": "~1.0",
    "illuminate/html": "~5.0",
    "pingpong/modules": "1.*",
    "cartalyst/sentinel": "1.0.*",
    "laracasts/commander": "dev-master",
    "laracasts/flash": "~1.0",
    "laracasts/presenter": "0.2.*",
    "guzzlehttp/guzzle": "4.2.2",
    "mcamara/laravel-localization": "dev-Laravel5Support",
    "dimsav/laravel-translatable": "dev-laravel-5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://packages.cartalyst.com"
    },
    {
      "type": "vcs",
      "url": "https://github.com/nWidart/laravel-localization"
    }
  ],
  "autoload": {
    "classmap": [
      "database",
      "tests/TestCase.php"
    ],
    "psr-4": {
      "App\\": "app/",
      "Modules\\": "Modules/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "post-create-project-cmd": [
      "php artisan key:generate",
      "php artisan platform:install"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev"
}
